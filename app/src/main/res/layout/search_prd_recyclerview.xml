<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rightOrwrong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/search_prd_img"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/cmp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A7A7A7"
                android:textSize="14dp"
                android:text="한율"/>
            <TextView
                android:id="@+id/prd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize= "17dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:text="어린 쑥 수분진정 토너"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/prd_star"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/star_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFE176"
                    android:textSize= "18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="4.6"/>
                <TextView
                    android:id="@+id/review_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#AAAAAA"
                    android:textSize= "16dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="(2,678)"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/prd_imp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#AAAAAA"
                    android:textSize= "12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="200ml / 21,000원"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>